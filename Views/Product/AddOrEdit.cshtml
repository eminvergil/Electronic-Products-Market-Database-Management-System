@model Electronic_Products_Market_Database_Management_System.Models.ProductModel

@{
    ViewData["Title"] = "Create";
}

<h2>Add New Product</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="AddOrEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input type="hidden" asp-for="pId" />
            
            <div class="form-group">
                <label asp-for="pImage" class="control-label"></label>
                <input asp-for="pImage" class="form-control" />
                <span asp-validation-for="pImage" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="pName" class="control-label"></label>
                    <input asp-for="pName" class="form-control" />
                    <span asp-validation-for="pName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="number" class="control-label"></label>
                    <input asp-for="number" class="form-control" />
                    <span asp-validation-for="number" class="text-danger"></span>
                </div>
                </div>
            <div class="form-group">
                <label asp-for="inStock" class="control-label"></label>
                <input asp-for="inStock" class="form-control" />
                <span asp-validation-for="inStock" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-info btn-block"><i class="fa fa-table"></i>Back to Product List</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}